<h1>Search Results</h1>

<% if @jobs.any? %>
  <ul>
    <% @jobs.each do |job| %>
      <li>
        <strong><%= job['title'] %></strong><br>
        <em><%= job['company'] %></em><br>
        <%= job['locations'] %><br>
        <a href="<%= job['url'] %>" target="_blank">View Job</a>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No jobs found.</p>
<% end %>

